<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.loginandregistration.activity.settings">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <include android:id="@+id/app_bar" layout="@layout/app_bar"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:padding="4dp"
        android:background="#eeeeee">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Account"
            android:id="@+id/textView8"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:theme="@style/Levenheading"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:layout_marginTop="40dp"
            android:clickable="false"
            android:contextClickable="false"
            android:id="@+id/rowbBoxInsSetting"
            android:background="#eeeeee"
            android:clipToPadding="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Change your information by taping on the field, then check on the right to save."
                android:id="@+id/textView2"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="@color/switch_thumb_normal_material_dark"
                android:textColorHighlight="@color/abc_background_cache_hint_selector_material_dark" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/nickNameRowStt"
                android:background="@drawable/softrect"
                android:layout_marginBottom="10dp"
                android:elevation="2dp"
                android:padding="10dp"
                android:weightSum="1">

                <Space
                    android:layout_width="40px"
                    android:layout_height="20px" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/imageView"
                    android:background="@android:drawable/sym_def_app_icon"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp" />

                <Space
                    android:layout_width="40px"
                    android:layout_height="20px" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nickname"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_marginBottom="0dp"
                    android:inputType="textPersonName"
                    android:paddingTop="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="4dp"
                    android:alpha=".7"
                    android:textSize="14sp"
                    android:layout_weight="0.61" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageButton"
                    android:background="@drawable/ic_check_circle_black_24dp"
                    android:layout_gravity="center"
                    android:alpha=".6"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/fullNameRowStt"
                android:background="@drawable/softrect"
                android:layout_marginBottom="10dp"
                android:elevation="2dp"
                android:padding="10dp"
                android:weightSum="1" >

                <Space
                    android:layout_width="30px"
                    android:layout_height="20px" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView3"
                    android:background="@drawable/ic_mood_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="@android:color/holo_purple" />

                <Space
                    android:layout_width="40px"
                    android:layout_height="20px" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_marginBottom="0dp"
                    android:inputType="textPersonName"
                    android:paddingTop="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="4dp"
                    android:alpha=".7"
                    android:textSize="14sp"
                    android:layout_weight="0.61" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/ic_check_circle_black_24dp"
                    android:layout_gravity="center"
                    android:alpha=".6"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/cellPhoneRowStt"
                android:background="@drawable/softrect"
                android:layout_marginBottom="10dp"
                android:elevation="2dp"
                android:padding="10dp"
                android:weightSum="1" >

                <Space
                    android:layout_width="40px"
                    android:layout_height="20px" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/imageView4"
                    android:background="@drawable/ic_ring_volume_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="@android:color/holo_orange_dark" />

                <Space
                    android:layout_width="40px"
                    android:layout_height="20px" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:ems="10"
                    android:id="@+id/editText4"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_marginBottom="0dp"
                    android:inputType="textPersonName"
                    android:paddingTop="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="4dp"
                    android:alpha=".7"
                    android:textSize="14sp"
                    android:layout_weight="0.61" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageButton3"
                    android:background="@drawable/ic_check_circle_black_24dp"
                    android:layout_gravity="center"
                    android:alpha=".6"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/emailRowStt"
                android:background="@drawable/softrect"
                android:layout_marginBottom="10dp"
                android:elevation="2dp"
                android:padding="10dp"
                android:weightSum="1" >

                <Space
                    android:layout_width="40px"
                    android:layout_height="20px" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/imageView5"
                    android:background="@drawable/ic_newemail_24dp1"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="@android:color/holo_red_dark" />

                <Space
                    android:layout_width="40px"
                    android:layout_height="20px" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:ems="10"
                    android:id="@+id/editText5"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_marginBottom="0dp"
                    android:inputType="textPersonName"
                    android:paddingTop="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="4dp"
                    android:alpha=".7"
                    android:textSize="14sp"
                    android:layout_weight="0.61" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageButton4"
                    android:background="@drawable/ic_check_circle_black_24dp"
                    android:layout_gravity="center"
                    android:alpha=".6"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/passWordRowStt"
                android:background="@drawable/softrect"
                android:layout_marginBottom="10dp"
                android:elevation="2dp"
                android:padding="10dp"
                android:weightSum="1" >

                <Space
                    android:layout_width="40px"
                    android:layout_height="20px" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/imageView6"
                    android:background="@drawable/ic_security_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="@android:color/holo_blue_dark" />

                <Space
                    android:layout_width="40px"
                    android:layout_height="20px" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:ems="10"
                    android:id="@+id/editText6"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_marginBottom="0dp"
                    android:inputType="textPersonName"
                    android:paddingTop="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="4dp"
                    android:alpha=".7"
                    android:textSize="14sp"
                    android:layout_weight="0.61" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageButton5"
                    android:background="@drawable/ic_check_circle_black_24dp"
                    android:layout_gravity="center"
                    android:alpha=".6"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
